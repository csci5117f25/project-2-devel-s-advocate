rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    //is user authed?
    function isAuthenticated() {
      return request.auth != null;
    }

    //does user own document?
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    //does user own resourve?
    function isResourceOwner() {
      return isAuthenticated() && request.auth.uid == resource.data.userId;
    }

    //Users can only access their run documents
    match /runs/{runId} {
      // Allow read/write for authenticated users who own the run
      allow read, write: if isResourceOwner();

      // Allow create for authenticated users, but validate userId matches auth user
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.keys().hasAll(['userId', 'startTime']) &&
        request.resource.data.userId is string &&
        request.resource.data.startTime is timestamp;
    }

    // Users collection - users can only access their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Private stats subcollection
      match /private/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}